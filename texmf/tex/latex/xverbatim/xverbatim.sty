\DeclareRobustCommand*{\@showcode}{%
%use the pygmentize
\ifdefstring{\@xverbatimmode}{tex}
{
 \immediate\write18{pygmentize   -o \@outname.output.tex \@outname.\@xverbatimmode}%
 \noindent code:\thechapter-\arabic{@xverbatimCounter}
 \vspace{-5ex}
 \immediate\input{\@outname.output.tex}
}
{
\immediate\write18{pygmentize   -o \@outname.tex \@outname.\@xverbatimmode}
%a little diy
\noindent code:\thechapter-\arabic{@xverbatimCounter}
\vspace{-5ex}
\immediate\input{\@outname.tex}
}
}

%error and rc
\DeclareRobustCommand*{\@writefeedback}{%
% Read the return code
\immediate\openin\@retcode=\@outname.rc
\immediate\read\@retcode to \rc
\immediate\closein\@retcode

% If the return code isn't zero then include
% the traceback.
\ifnumequal{\rc}{0}{}{%
    \begingroup
        \color{red}
        \verbatiminput{\@outname.\@xverbatimmode.err}
    \endgroup
}}


\DeclareRobustCommand*{\@executecode}{%
\ifdefstring{\@xverbatimmode}{py}
{ \immediate\write18{  python3 \@outname.py > \@outname.py.out 2> \@outname.py.err; echo -n $? > \@outname.rc}}
{
\ifdefstring{\@xverbatimmode}{lisp}
{ \immediate\write18{sbcl --script \@outname.lisp    > \@outname.lisp.out 2> \@outname.lisp.err; echo -n $? > \@outname.rc}}
{
\ifdefstring{\@xverbatimmode}{scm}
{ \immediate\write18{ guile  \@outname.scm  > \@outname.scm.out 2> \@outname.scm.err; echo -n $? > \@outname.rc}}
{\errmessage{only support the py lisp and scm}
}}}}


\DeclareRobustCommand*{\@showresult}{%
\begingroup
\catcode`\ =\active
\catcode`\^^M=\active
\parindent=0pt
\vspace{-2ex}
\rule{\linewidth}{0.4pt}
\footnotesize
\immediate\input{\@outname.\@xverbatimmode.out}
\noindent\rule[2em]{\linewidth}{0.4pt}%
\endgroup
\vspace{-2ex}
}



%environment start
\newenvironment{xverbatim}[2][1]%#1 optional 0 1 129 ... #2 程序语言模式 py lisp scm
{
\immediate\stepcounter{@xverbatimCounter}
\def\@codemode{#1}
\def\@codefilename{code:\thechapter-\arabic{@xverbatimCounter}}
\def\@xverbatimmode{#2}

%if the filefolder doesnot exist  then creat it
\immediate\write18{if [  !  -d  codeexport/code:\thechapter-\arabic{@xverbatimCounter}  ];  then mkdir -p codeexport/code:\thechapter-\arabic{@xverbatimCounter}  ; fi}
%modified the code file name
\newcommand{\@outname}{codeexport/code:\thechapter-\arabic{@xverbatimCounter}/\@codefilename }
\immediate\openout\@codeout=\@outname.\@xverbatimmode
