\ifnum \@codemode = 0
\else   \ifnum \@codemode = 1    \@showcode
\else   \ifnum \@codemode = 12   \@showcode \@executecode \@writefeedback
\else   \ifnum \@codemode = 129    \@showcode \@executecode \@showresult \@writefeedback
\else   \ifnum \@codemode = 19   \@showcode  \@showresult
\else          \errmessage{you typed wrong optional parameter,the choice is  0 1   12 129 19  .}
\fi\fi\fi \fi \fi

